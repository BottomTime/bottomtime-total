{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "docs",
          "build:client",
          "build:server"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/"]
    },
    "test": {
      "outputs": ["{projectRoot}/coverage/"]
    },
    "build:client": {
      "outputs": ["{projectRoot}/dist/client/"]
    },
    "build:server": {
      "outputs": ["{projectRoot}/dist/server/"]
    }
  }
}
