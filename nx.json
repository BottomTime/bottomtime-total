{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "docs",
          "build:client",
          "build:server"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["{projectRoot}/src/**/*.ts", "{projectRoot}/src/**/*.vue"],
      "outputs": ["{projectRoot}/dist/**/*"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/src/**/*.vue",
        "{projectRoot}/tests/**/*.ts"
      ],
      "outputs": ["{projectRoot}/coverage/**/*"]
    }
  }
}
